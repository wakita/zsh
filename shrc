# zshenv
# zprofile (if login shell)
# zshrc    (if interactive shell)
# zlogin   (if login shell)

for dir in \
  /opt/brew/share/npm/bin \
  /opt/brew/bin
do
  if [[ -d $dir ]]; then path[1,0]=$dir; fi
done

for dir in \
  $DROPBOX/bin \
  ./bin
do
  if [[ -d $dir ]]; then path+=$dir; fi
done

source $ZDOTDIR/oh-my-zsh.zsh

if [ $TERM = dumb ]; then export PS1="$ "; fi

if [ -d $ZDOTDIR/aliases ]; then
  for f in $ZDOTDIR/aliases/*.alias; do source $f; done
fi
